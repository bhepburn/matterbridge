{
  "name": "@matterbridge/core",
  "version": "3.5.5",
  "description": "Matterbridge core library",
  "author": "https://github.com/Luligu",
  "homepage": "https://matterbridge.io/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luligu/matterbridge.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/Luligu/matterbridge/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "matterbridge",
    "homebridge",
    "bridge",
    "plugin",
    "frontend",
    "matter.js",
    "matter-node.js",
    "matter",
    "matterprotocol",
    "iot",
    "smarthome",
    "connectedthings",
    "hap",
    "homekit",
    "siri",
    "google-home",
    "alexa",
    "homeassistant",
    "smartthings",
    "ewelink"
  ],
  "license": "Apache-2.0",
  "funding": {
    "type": "buymeacoffee",
    "url": "https://www.buymeacoffee.com/luligugithub"
  },
  "type": "module",
  "main": "./dist/export.js",
  "types": "./dist/export.d.ts",
  "exports": {
    ".": {
      "types": "./dist/export.d.ts",
      "import": "./dist/export.js"
    },
    "./devices": {
      "types": "./dist/devices/export.d.ts",
      "import": "./dist/devices/export.js"
    },
    "./clusters": {
      "types": "./dist/clusters/export.d.ts",
      "import": "./dist/clusters/export.js"
    },
    "./utils": {
      "types": "./dist/utils/export.d.ts",
      "import": "./dist/utils/export.js"
    },
    "./dgram": {
      "types": "./dist/dgram/export.d.ts",
      "import": "./dist/dgram/export.js"
    },
    "./jestutils": {
      "types": "./dist/jestutils/export.d.ts",
      "import": "./dist/jestutils/export.js"
    },
    "./matter": {
      "types": "./dist/matter/export.d.ts",
      "import": "./dist/matter/export.js"
    },
    "./matter/devices": {
      "types": "./dist/matter/devices.d.ts",
      "import": "./dist/matter/devices.js"
    },
    "./matter/clusters": {
      "types": "./dist/matter/clusters.d.ts",
      "import": "./dist/matter/clusters.js"
    },
    "./matter/behaviors": {
      "types": "./dist/matter/behaviors.d.ts",
      "import": "./dist/matter/behaviors.js"
    },
    "./matter/endpoints": {
      "types": "./dist/matter/endpoints.d.ts",
      "import": "./dist/matter/endpoints.js"
    },
    "./matter/types": {
      "types": "./dist/matter/types.d.ts",
      "import": "./dist/matter/types.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    },
    "./mb_mdns": {
      "types": "./dist/mb_mdns.d.ts",
      "import": "./dist/mb_mdns.js"
    },
    "./mb_coap": {
      "types": "./dist/mb_coap.d.ts",
      "import": "./dist/mb_coap.js"
    },
    "./mb_health": {
      "types": "./dist/mb_health.d.ts",
      "import": "./dist/mb_health.js"
    }
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0 || >=22.0.0 <23.0.0 || >=24.0.0 <25.0.0"
  },
  "files": [
    "bin",
    "dist",
    "npm-shrinkwrap.json",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "buildProduction": "tsc --project tsconfig.production.json",
    "clean": "npx shx rm -rf *.tsbuildinfo dist",
    "cleanBuild": "npm run clean && npm run build",
    "cleanBuildProduction": "npm run clean && npm run buildProduction",
    "watch": "tsc --watch",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --maxWorkers=100%",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --maxWorkers=100% --watch",
    "test:verbose": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --maxWorkers=100% --verbose",
    "test:coverage": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --maxWorkers=100% --coverage",
    "test:debug": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest --reporter verbose",
    "test:vitest:verbose": "vitest run --reporter verbose",
    "test:vitest:coverage": "vitest run --reporter verbose --coverage",
    "deepClean": "npx shx rm -rf *.tsbuildinfo dist coverage jest temp package-lock.json npm-shrinkwrap.json .cache node_modules",
    "reset": "npm run deepClean && npm install --no-fund --no-audit && npm run build",
    "softReset": "npm install --no-fund --no-audit && npm run build",
    "lint": "eslint --cache --cache-location .cache/.eslintcache --max-warnings=0 .",
    "lint:fix": "eslint --cache --cache-location .cache/.eslintcache --fix --max-warnings=0 .",
    "lint:debug": "eslint --cache --cache-location .cache/.eslintcache --max-warnings=0 --debug",
    "lint:config": "eslint --cache --cache-location .cache/.eslintcache --max-warnings=0 --print-config",
    "lint:inspect": "eslint --cache --cache-location .cache/.eslintcache --max-warnings=0 --inspect-config",
    "format": "prettier --cache --cache-location .cache/.prettiercache --write .",
    "format:check": "prettier --cache --cache-location .cache/.prettiercache --check .",
    "checkDependencies": "npx npm-check-updates",
    "updateDependencies": "npx npm-check-updates -u",
    "automator": "node scripts/runAutomator.mjs --monorepo-package",
    "runMeBeforePublish": "npm run cleanBuild && npm run lint && npm run format && npm run test:coverage && npm run build",
    "prepublishOnly": "npm pkg delete devDependencies scripts",
    "install:dependencies": "npm install --no-fund --no-audit --save-exact @matter/main @matterbridge/types @matterbridge/dgram @matterbridge/thread @matterbridge/utils archiver express glob multer node-ansi-logger node-persist-manager ws",
    "install:scripts": "npm install --no-fund --no-audit --save-dev --save-exact npm-check-updates shx cross-env",
    "install:typescript": "npm install --no-fund --no-audit --save-dev --save-exact typescript @types/node",
    "install:eslint": "npm install --no-fund --no-audit --save-dev --save-exact eslint @eslint/js typescript-eslint eslint-plugin-import eslint-plugin-n eslint-plugin-promise eslint-plugin-jsdoc",
    "install:prettier": "npm install --no-fund --no-audit --save-dev --save-exact prettier eslint-config-prettier eslint-plugin-prettier",
    "install:jest": "npm install --no-fund --no-audit --save-dev --save-exact jest ts-jest @types/jest @jest/globals eslint-plugin-jest",
    "install:vitest": "npm install --no-fund --no-audit --save-dev --save-exact vitest @vitest/coverage-v8 @vitest/eslint-plugin"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@jest/globals": "30.2.0",
    "@types/jest": "30.0.0",
    "@types/node": "25.3.0",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/eslint-plugin": "1.6.9",
    "cross-env": "10.1.0",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.15.0",
    "eslint-plugin-jsdoc": "62.6.1",
    "eslint-plugin-n": "17.24.0",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-promise": "7.2.1",
    "jest": "30.2.0",
    "npm-check-updates": "19.4.1",
    "prettier": "3.8.1",
    "shx": "0.4.0",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0",
    "vitest": "4.0.18"
  },
  "dependencies": {
    "@matter/main": "0.16.8",
    "@matterbridge/dgram": "3.5.5",
    "@matterbridge/thread": "3.5.5",
    "@matterbridge/types": "3.5.5",
    "@matterbridge/utils": "3.5.5",
    "archiver": "7.0.1",
    "express": "5.2.1",
    "glob": "13.0.6",
    "multer": "2.0.2",
    "node-ansi-logger": "3.2.0",
    "node-persist-manager": "2.0.1",
    "ws": "8.19.0"
  },
  "overrides": {
    "eslint": "10.0.0",
    "@eslint/js": "10.0.1"
  }
}
