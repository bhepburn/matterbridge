{
  "name": "matterbridge",
  "version": "3.5.3",
  "description": "Matterbridge plugin manager for Matter",
  "author": "https://github.com/Luligu",
  "license": "Apache-2.0",
  "homepage": "https://matterbridge.io/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Luligu/matterbridge.git"
  },
  "bugs": {
    "url": "https://github.com/Luligu/matterbridge/issues"
  },
  "funding": {
    "type": "buymeacoffee",
    "url": "https://www.buymeacoffee.com/luligugithub"
  },
  "keywords": [
    "matterbridge",
    "homebridge",
    "bridge",
    "plugin",
    "frontend",
    "matter.js",
    "matter-node.js",
    "matter",
    "matterprotocol",
    "iot",
    "smarthome",
    "connectedthings",
    "hap",
    "homekit",
    "siri",
    "google-home",
    "alexa",
    "homeassistant",
    "smartthings",
    "ewelink"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "matterbridge": "bin/matterbridge.js",
    "mb_mdns": "bin/mb_mdns.js",
    "mb_coap": "bin/mb_coap.js",
    "mb_health": "bin/mb_health.js"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0 || >=22.0.0 <23.0.0 || >=24.0.0 <25.0.0"
  },
  "workspaces": [
    "packages/jest-utils",
    "packages/vitest-utils",
    "packages/utils",
    "packages/dgram",
    "packages/thread"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./devices": {
      "import": "./dist/devices/export.js",
      "types": "./dist/devices/export.d.ts"
    },
    "./clusters": {
      "import": "./dist/clusters/export.js",
      "types": "./dist/clusters/export.d.ts"
    },
    "./utils": {
      "import": "./dist/utils/export.js",
      "types": "./dist/utils/export.d.ts"
    },
    "./dgram": {
      "import": "./dist/dgram/export.js",
      "types": "./dist/dgram/export.d.ts"
    },
    "./jestutils": {
      "import": "./dist/jestutils/export.js",
      "types": "./dist/jestutils/export.d.ts"
    },
    "./logger": {
      "import": "./dist/logger/export.js",
      "types": "./dist/logger/export.d.ts"
    },
    "./storage": {
      "import": "./dist/storage/export.js",
      "types": "./dist/storage/export.d.ts"
    },
    "./matter": {
      "import": "./dist/matter/export.js",
      "types": "./dist/matter/export.d.ts"
    },
    "./matter/devices": {
      "import": "./dist/matter/devices.js",
      "types": "./dist/matter/devices.d.ts"
    },
    "./matter/clusters": {
      "import": "./dist/matter/clusters.js",
      "types": "./dist/matter/clusters.d.ts"
    },
    "./matter/behaviors": {
      "import": "./dist/matter/behaviors.js",
      "types": "./dist/matter/behaviors.d.ts"
    },
    "./matter/endpoints": {
      "import": "./dist/matter/endpoints.js",
      "types": "./dist/matter/endpoints.d.ts"
    },
    "./matter/types": {
      "import": "./dist/matter/types.js",
      "types": "./dist/matter/types.d.ts"
    }
  },
  "files": [
    "bin",
    "dist",
    "frontend/build",
    "frontend/package.json",
    "npm-shrinkwrap.json",
    "CHANGELOG.md",
    "README-DEV.md",
    "README-DOCKER.md",
    "README-MACOS-PLIST.md",
    "README-NGINX.md",
    "README-PODMAN.md",
    "README-SERVICE-LOCAL.md",
    "README-SERVICE-OPT.md",
    "README-SERVICE.md"
  ],
  "scripts": {
    "start": "node ./dist/cli.js",
    "start:bridge": "node ./dist/cli.js --bridge",
    "start:childbridge": "node ./dist/cli.js --childbridge",
    "start:inspect": "node --inspect=0.0.0.0:9229 ./dist/cli.js --debug --trace --loader",
    "start:gc": "node --expose-gc ./dist/cli.js --debug --trace --loader",
    "start:tracegc": "node --expose_gc --trace_gc ./dist/cli.js --debug --trace --loader",
    "start:tracegcverbose": "node --expose_gc --trace_gc_verbose ./dist/cli.js --debug --trace --loader",
    "start:nocolor": "cross-env NO_COLOR=1 node ./dist/cli.js",
    "start:noansi": "node ./dist/cli.js --no-ansi",
    "build": "tsc -b tsconfig.build.json --verbose",
    "buildProduction": "tsc -b tsconfig.production.build.json --verbose",
    "cleanBuild": "npm run clean && npm run build",
    "cleanBuildProduction": "npm run clean && npm run buildProduction",
    "watch": "tsc -b tsconfig.build.json --watch --verbose",
    "cleanWatch": "npm run clean && npm run watch",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --maxWorkers=100%",
    "test:watch": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --watch --maxWorkers=100%",
    "test:verbose": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --verbose --maxWorkers=100%",
    "test:coverage": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --coverage --maxWorkers=100% --coverageThreshold=\"{ \\\"global\\\": { \\\"lines\\\": 100, \\\"functions\\\": 100 } }\"",
    "test:debug": "node --no-warnings --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest --reporter verbose",
    "test:vitest:verbose": "vitest run --reporter verbose",
    "test:vitest:coverage": "vitest run --reporter verbose --coverage",
    "clean": "npm --workspaces --if-present run clean && npx shx rm -rf *.tsbuildinfo dist",
    "deepClean": "npm --workspaces --if-present run deepClean && npx shx rm -rf *.tsbuildinfo dist coverage jest temp package-lock.json npm-shrinkwrap.json .cache/* .cache/.[!.]* .cache/..?* node_modules/* node_modules/.[!.]* node_modules/..?*",
    "reset": "npm run deepClean && npm install --no-fund --no-audit && npm run build && (npm link --no-fund --no-audit || sudo npm link --no-fund --no-audit) && shx chmod +x bin/*.js",
    "softReset": "npx shx rm -f package-lock.json npm-shrinkwrap.json && npm install --no-fund --no-audit && npm run build && (npm link --no-fund --no-audit|| sudo npm link --no-fund --no-audit) && shx chmod +x bin/*.js",
    "lint": "npm --workspaces --if-present run lint && eslint --cache --cache-location .cache/.eslintcache --max-warnings=0 .",
    "lint:fix": "npm --workspaces --if-present run lint:fix && eslint --cache --cache-location .cache/.eslintcache --fix --max-warnings=0 .",
    "format": "npm --workspaces --if-present run format && prettier --cache --cache-location .cache/.prettiercache --write .",
    "format:check": "npm --workspaces --if-present run format:check && prettier --cache --cache-location .cache/.prettiercache --check .",
    "preversion": "npm run runMeBeforePublish",
    "postversion": "git push",
    "version:patch": "npm version patch -m \"Release %s\"",
    "version:minor": "npm version minor -m \"Release %s\"",
    "version:major": "npm version major -m \"Release %s\"",
    "git:status": "git status && git branch -vv && git --no-pager diff dev origin/dev && git stash list && git fsck --full --no-reflogs",
    "git:remote": "git remote -v && git remote show origin",
    "git:prune": "git fetch --prune --prune-tags",
    "git:hardreset:main": "git fetch origin && git checkout main && git reset --hard origin/main",
    "git:hardreset:dev": "git fetch origin && git checkout dev && git reset --hard origin/dev",
    "git:hardreset:edge": "git fetch origin && git checkout edge && git reset --hard origin/edge",
    "automator": "npm --workspaces --if-present run automator",
    "dataModel": "node ./scripts/data-model.mjs",
    "fetchChip": "node ./scripts/fetch-chip.mjs",
    "updateHtmls": "node ./scripts/marked.mjs",
    "sync": "node scripts/sync-workspaces.mjs --scope \"@matterbridge\"",
    "runMeBeforePublish": "npm run build && npm run lint && npm run format && npm run test:coverage && npm run build && npm run updateHtmls",
    "prepublishOnly": "npm run cleanBuildProduction && npm --workspaces pkg delete devDependencies scripts && npm pkg delete devDependencies scripts workspaces && npx shx rm -rf node_modules/* node_modules/.[!.]* node_modules/..?* package-lock.json npm-shrinkwrap.json && npm install --no-fund --no-audit --omit=dev && npm shrinkwrap --omit=dev",
    "checkDependencies": "npm --workspaces --if-present run checkDependencies && npx npm-check-updates",
    "updateDependencies": "npm --workspaces --if-present run updateDependencies && npx npm-check-updates -u && npm run reset",
    "updateMatter:latest": "npm install --save-exact @matter/main@latest && npm install && npm run reset",
    "updateMatter:dev": "npm install --save-exact @matter/main@dev && npm install && npm run reset",
    "updateMatter:loc": "npm install ../matter.js/packages/matter.js && npm install && npm run reset",
    "install:dependencies": "npm install --no-fund --no-audit --save-exact @matter/main archiver express glob multer node-ansi-logger node-persist-manager ws",
    "install:scripts": "npm install --no-fund --no-audit --save-dev --save-exact npm-check-updates shx cross-env marked",
    "install:typescript": "npm install --no-fund --no-audit --save-dev --save-exact typescript @types/node @types/express @types/ws",
    "install:eslint": "npm install --no-fund --no-audit --save-dev --save-exact eslint @eslint/js typescript-eslint eslint-plugin-import eslint-plugin-n eslint-plugin-promise eslint-plugin-jsdoc",
    "install:prettier": "npm install --no-fund --no-audit --save-dev --save-exact prettier eslint-config-prettier eslint-plugin-prettier",
    "install:jest": "npm install --no-fund --no-audit --save-dev --save-exact jest ts-jest @types/jest @jest/globals eslint-plugin-jest",
    "install:vitest": "npm install --no-fund --no-audit --save-dev --save-exact vitest @vitest/coverage-v8 @vitest/eslint-plugin",
    "docker:build:local:latest": "docker build --no-cache --pull -f docker/Dockerfile.latest -t matterbridge:latest .",
    "docker:run:local:latest": "docker run -dit --restart unless-stopped --name matterbridge-latest-local -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 matterbridge:latest",
    "docker:run:hub:latest": "docker run -dit --restart unless-stopped --name matterbridge-latest-hub -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 luligu/matterbridge:latest",
    "docker:build:local:dev": "docker build --no-cache --pull -f docker/Dockerfile.dev -t matterbridge:dev .",
    "docker:run:local:dev": "docker run -dit --restart unless-stopped --name matterbridge-dev-local -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 matterbridge:dev",
    "docker:run:hub:dev": "docker run -dit --restart unless-stopped --name matterbridge-dev-hub -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 luligu/matterbridge:dev",
    "docker:build:local:ubuntu": "docker build --no-cache --pull -f docker/Dockerfile.ubuntu -t matterbridge:ubuntu .",
    "docker:run:local:ubuntu": "docker run -dit --restart unless-stopped --name matterbridge-ubuntu-local -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 matterbridge:ubuntu",
    "docker:run:hub:ubuntu": "docker run -dit --restart unless-stopped --name matterbridge-ubuntu-hub -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 luligu/matterbridge:ubuntu",
    "docker:build:local:24-ubuntu-slim": "docker build --no-cache --pull -f docker/Dockerfile.24-ubuntu-slim -t matterbridge:24-ubuntu-slim .",
    "docker:run:local:24-ubuntu-slim": "docker run -it --rm --name matterbridge-24-ubuntu-slim-local -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge matterbridge:24-ubuntu-slim bash",
    "docker:run:hub:24-ubuntu-slim": "docker run -it --rm --name matterbridge-24-ubuntu-slim-hub -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge luligu/matterbridge:24-ubuntu-slim bash",
    "docker:build:local:alpine": "docker build --no-cache --pull -f docker/Dockerfile.alpine -t matterbridge:alpine .",
    "docker:run:local:alpine": "docker run -dit --restart unless-stopped --name matterbridge-alpine-local -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 matterbridge:alpine",
    "docker:run:hub:alpine": "docker run -dit --restart unless-stopped --name matterbridge-alpine-hub -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 luligu/matterbridge:alpine",
    "docker:build:local:s6-rc-base": "docker build --no-cache --pull -f docker/Dockerfile.s6-rc-base -t matterbridge:s6-rc-base .",
    "docker:run:local:s6-rc-base": "docker run -dit --restart unless-stopped --name matterbridge-s6-rc-base-local -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 matterbridge:s6-rc-base matterbridge --docker",
    "docker:run:hub:s6-rc-base": "docker run -dit --restart unless-stopped --name matterbridge-s6-rc-base-hub -v matterbridge-local-storage:/root/.matterbridge -v matterbridge-local-plugins:/root/Matterbridge -p 8283:8283 luligu/matterbridge:s6-rc-base matterbridge --docker",
    "docker:rm:all": "docker rm -f matterbridge-latest-local matterbridge-dev-local matterbridge-ubuntu-local matterbridge-24-ubuntu-slim-local matterbridge-alpine-local matterbridge-s6-rc-base-local matterbridge-latest-hub matterbridge-dev-hub matterbridge-ubuntu-hub matterbridge-24-ubuntu-slim-hub matterbridge-alpine-hub matterbridge-s6-rc-base-hub || true",
    "publish:all:dev": "node scripts/publish-workspaces.mjs --scope @matterbridge --tag dev && npm run reset",
    "publish:all:edge": "node scripts/publish-workspaces.mjs --scope @matterbridge --tag edge && npm run reset",
    "publish:all:latest": "node scripts/publish-workspaces.mjs --scope @matterbridge --tag latest && npm run reset",
    "pack:all:local": "node scripts/pack-workspaces.mjs --scope @matterbridge --tag local && npm run reset",
    "pack:all:latest": "node scripts/pack-workspaces.mjs --scope @matterbridge --tag latest && npm run reset"
  },
  "dependencies": {
    "@matter/main": "0.16.8",
    "@matterbridge/dgram": "3.5.3",
    "@matterbridge/jest-utils": "3.5.3",
    "@matterbridge/thread": "3.5.3",
    "@matterbridge/utils": "3.5.3",
    "@matterbridge/vitest-utils": "3.5.3",
    "archiver": "7.0.1",
    "express": "5.2.1",
    "glob": "13.0.1",
    "multer": "2.0.2",
    "node-ansi-logger": "3.2.0",
    "node-persist-manager": "2.0.0",
    "ws": "8.19.0"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@jest/globals": "30.2.0",
    "@types/archiver": "7.0.0",
    "@types/express": "5.0.6",
    "@types/jest": "30.0.0",
    "@types/multer": "2.0.0",
    "@types/node": "25.2.0",
    "@types/ws": "8.18.1",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/eslint-plugin": "1.6.6",
    "cross-env": "10.1.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jest": "29.12.2",
    "eslint-plugin-jsdoc": "62.5.0",
    "eslint-plugin-n": "17.23.2",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-promise": "7.2.1",
    "jest": "30.2.0",
    "marked": "17.0.1",
    "npm-check-updates": "19.3.2",
    "prettier": "3.8.1",
    "shx": "0.4.0",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vitest": "4.0.18"
  }
}
