{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": ["src/**/*.ts", "package.json"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "**/__test__/*"]
}
